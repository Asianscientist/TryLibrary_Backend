PORT=3000
NODE_ENV=development

# PostgreSQL Connection String (recommended for production/cloud databases)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@host:port/database

# Alternative: Individual database variables (for local development)
# Uncomment and use these if you prefer individual variables instead of DATABASE_URL
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ebook
# DB_USER=postgres
# DB_PASSWORD=your_password

JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d
